# ═══════════════════════════════════════════════════════════════════
# ClariFi Environment Variables Template
# ═══════════════════════════════════════════════════════════════════
# IMPORTANT: Copy this file to .env and fill in actual values
# NEVER commit .env to git - it's in .gitignore
# Replace all <<PLACEHOLDER:...>> values before running

# Database Configuration
DATABASE_URL=postgresql://clarifi:<<PLACEHOLDER:POSTGRES_PASSWORD>>@localhost:5432/clarifi

# JWT / Authentication
JWT_SECRET=<<PLACEHOLDER:JWT_SECRET>>
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Application Settings
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:4000/api

# AI / LLM Integration Keys
GEMINI_API_KEY=<<PLACEHOLDER:GEMINI_API_KEY>>
OPENAI_API_KEY=<<PLACEHOLDER:OPENAI_API_KEY>>

# Twilio (SMS & Voice)
TWILIO_SID=<<PLACEHOLDER:TWILIO_SID>>
TWILIO_AUTH_TOKEN=<<PLACEHOLDER:TWILIO_AUTH_TOKEN>>
TWILIO_PHONE_NUMBER=<<PLACEHOLDER:TWILIO_PHONE_NUMBER>>

# E-Signature Provider (DocuSign)
DOCUSIGN_CLIENT_ID=<<PLACEHOLDER:DOCUSIGN_CLIENT_ID>>
DOCUSIGN_CLIENT_SECRET=<<PLACEHOLDER:DOCUSIGN_CLIENT_SECRET>>

# File Storage Configuration
STORAGE_PROVIDER=local
# Options: local | s3 | gcs | supabase
S3_BUCKET=<<PLACEHOLDER:S3_BUCKET_NAME>>
S3_REGION=<<PLACEHOLDER:S3_REGION>>
S3_ACCESS_KEY_ID=<<PLACEHOLDER:S3_ACCESS_KEY_ID>>
S3_SECRET_ACCESS_KEY=<<PLACEHOLDER:S3_SECRET_ACCESS_KEY>>

# Local Development Only (NEVER use in production)
SEED_ADMIN_EMAIL=admin@clarifi.local
SEED_ADMIN_PASSWORD=<<PLACEHOLDER:SEED_ADMIN_PASSWORD>>

# Logging & Monitoring
LOG_LEVEL=debug
SENTRY_DSN=<<PLACEHOLDER:SENTRY_DSN>>

# Next.js Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXTAUTH_SECRET=<<PLACEHOLDER:NEXTAUTH_SECRET>>
NEXTAUTH_URL=http://localhost:3000

# Feature Flags (for gradual rollouts)
FEATURE_OCR_ENABLED=true
FEATURE_WORKFLOWS_ENABLED=true
FEATURE_AUTOMATION_ENABLED=true
